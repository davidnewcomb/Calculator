<project name="Calculator">

    <target name="build">
        <mkdir dir="build"/>
        <javac srcdir="src"
               destdir="build"/>
    </target>

    <target name="clean">
        <delete dir="build"/>
        <delete dir="doc"/>
    </target>

    <target name="javadoc">
        <mkdir dir="doc"/>
        <javadoc destdir="doc"
                 sourcepath="src"
                 charset="utf8"/>
    </target>

    <target name="run" depends="build">
        <java classname="be.lionelgoffaux.calculator.Main"
              classpath="build"
              fork="true"/>
    </target>

    <target name="test">
    </target>

</project>